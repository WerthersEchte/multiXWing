<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox" fx:id="oVBox" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Options">
            <font>
                <Font size="36.0" />
            </font></Label>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Size:">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            <TextField fx:id="oTFX" prefWidth="100.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Label text="cm in X">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="oTFY" prefWidth="100.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Label text="cm in Y">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            </children></HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#saveValues" text="OK">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#close" text="Cancel">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
