<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="newgamepane" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fh_kiel.roboticlab.multixwing.javafx.StartGame">
   <children>
      <Label text="New Game">
         <font>
            <Font size="36.0" />
         </font></Label>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Squads:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" text="-">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label text="2">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" text="+">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children></HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Area:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField alignment="CENTER_RIGHT" prefWidth="60.0" promptText="W" text="90" HBox.hgrow="NEVER">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Label text="X">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField prefWidth="60.0" promptText="H" text="90" HBox.hgrow="NEVER">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" text="90x90">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" text="90x180">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" text="Max">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" text="OK">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" text="Cancel">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
    <stylesheets>
        <URL value="@StartGame.css" />
    </stylesheets>
</VBox>
